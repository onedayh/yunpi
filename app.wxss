/**app.wxss**/
@import "components/common/index.wxss";
page{
    font-family: PingFang SC;
    background-color: #f5f5f5;
    border-top: 1rpx solid #f2f2f2;
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}
.mask{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    z-index: 9
}

/*数据为空*/
.empty{
    padding-top: 200rpx;
    color: #aaa;
    font-size: 36rpx;
    text-align: center;
}

.one-line{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.two-line{
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}

.pull-down{
    height: 60rpx;
    padding-top: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #aaa;
    clear: both;
}

/*悬浮小icon*/
.im-index{
    position: fixed;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    top: 20rpx;
    left: 20rpx;
    display: flex;
    z-index: 99;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    box-shadow: 0 2rpx 4rpx rgba(153, 153, 153, .8);
}
.im-index image{
    width: 60rpx;
    height: 60rpx;
    padding-top: 10rpx
}

/*提示红点*/
.point{
    position: absolute;
    width: 12rpx;
    height: 12rpx;
    background-color: orangered;
    border-radius: 50%;
    z-index: 9999;
}

.login-wrap{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 100%;
    z-index: 100;
    background-color: rgba(0, 0, 0, .8);
}

/*input placeholder css*/
.pl-class{
    color: #ccc;
    font-size: 28rpx;
}

/*按钮*/
.add-btn{
    margin-top: 80rpx;
    width: 590rpx;
    background: linear-gradient(to right, orangered, #f33);
    border-radius: 50rpx;
    color: #fff;
    font-size: 32rpx;
}

/*tab*/
.tab{
    height: 88rpx;
    display: flex;
    justify-content: space-around;
    background-color: #fff;
}
.tab-item{
    display: flex;
    justify-content: center;
    height: 88rpx;
    line-height: 84rpx;
    border-bottom: 4rpx solid #e6e6e6;
}
.ac{
    border-bottom-color: orangered;
    color: orangered;
}
.bar-wrap{
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 30rpx;
    z-index: 1;
	padding: 30rpx;
	height: 130rpx;
}
.bar-wrap:after{
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
}
.bar-wrap swiper{
    height: 130rpx;
}
.bar-wrap .item{
    box-sizing: border-box;
    color: #fff;
    background-color: rgba(0, 0, 0, .3);
    border-radius: 8rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    width: 550rpx;
    padding: 6rpx 10rpx 6rpx 20rpx;
}
.asd{
    display: flex;
    flex-direction: column-reverse;
    padding: 0 30rpx;
}
.asd .item1{
    margin-top: 20rpx;
}

