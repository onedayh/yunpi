.address{
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
}
textarea{
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 10rpx 60rpx 10rpx 10rpx;
    line-height: 40rpx;
}
.count{
    height: 60rpx;
    line-height: 60rpx;
    text-align: right;
    font-size: 24rpx;
    padding-right: 30rpx;
    color: #999;
}
.save{
    width:590rpx;
    background:linear-gradient(to right, orangered, #f33);
