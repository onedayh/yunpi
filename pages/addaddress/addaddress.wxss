page{
    height: 100%;
    box-sizing: border-box;
    padding-top: 20rpx;
    color: #333;
    font-size: 28rpx;
}
view, pick{
    box-sizing: border-box;
}
.con{
    background-color: #fff;
    padding-left: 20rpx;
}
.item{
    height: 100rpx;
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.name{
    width: 20%;
}
.item input{
    width: 100%;
    text-align: right;
    padding-right: 60rpx;
}
.area, .pick{
    width: 100%;
    height: 100%;
}
.area{
    line-height: 100rpx;
    text-align: right;
    padding-right: 60rpx;
}
.place{
    color: #999;
    font-size: 26rpx;
}
