view{
    box-sizing: border-box;
}
.push{
    position: fixed;
    height: 140rpx;
    padding: 0 20rpx;
    width: 690rpx;
    border-radius: 12rpx;
    background-color: #fff;
    top: -150rpx;
    left: 30rpx;
    z-index: 9999;
    display: flex;
    align-items: center;
    box-shadow: 0 0 14rpx #ccc;
}
.push image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    box-shadow: 0 0 14rpx #ccc;
}
.text-wrap{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.name{
    color: #333;
    font-size: 28rpx;
    line-height: 40rpx;
}
.msg{
    color: #666;
    font-size: 26rpx;
    line-height: 40rpx;
    width: 480rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.time{
    margin-left: auto;
    color: #aaa;
    font-size: 24rpx;
}

