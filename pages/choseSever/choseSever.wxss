.chosesever {
    height: 150rpx;
    width: 100%;
    border-bottom: 1rpx solid #f2f2f2;
    background-color: #fff;
    display: flex;
    align-items: center;
    position: relative;
}

.serverImg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 30rpx;
}

.smallserverImg {
    width: 100%;
    height: 100%;
}

.serverName {
    font-size: 28rpx;
}

.chose {
    width: 180rpx;
    height: 60rpx;
    background: linear-gradient(to right, #ff4e17, #f33);
    border-radius: 40rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    right: 30rpx;
    top: 50rpx;
}
