/* pages/orderList/orderList.wxss */
page{
	border-top: none;
}
.title {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx 0 20rpx;
    background-color: #f5f5f5;
}

.title .text {
    flex: 1;
    font-size: 28rpx;
    color: #f33;
}

.title .detail {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    color: #999;
    font-size: 26rpx;
}

.detail image {
    width: 32rpx;
    height: 32rpx;
    display: block;
    margin-right: 10rpx;
}

.tab-h {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 77rpx;
    background: #fff;
    font-size: 14px;
    white-space: nowrap;
    position: fixed;
	border-top: 1rpx solid #f2f2f2;
    top: 0;
    left: 0;
    z-index: 99;
}

.navpicture {
    padding: 10rpx 20rpx;
}

.picture {
    width: 100%;
    height: 100rpx;
}

.pictureImg {
    width: 100%;
    height: 100%;
}

/* 货号产品 */

.productMapContent {
    padding-left: 20rpx;
	background-color: #fff
}

.productMap {
    width: 100%;
    padding: 20rpx 0;
    display: flex;
    justify-content: flex-end;
}

.mapLeft {
    flex: 0 0 240rpx;
    width: 240rpx;
    height: 240rpx;
}

.mapLeftImg {
    width: 100%;
    height: 100%;
}

.mapRight {
    width: 450rpx;
    height: 240rpx;
    /* float: left; */
    flex: 1;
    box-sizing: border-box;
    padding-right: 20rpx;
    margin-left: 40rpx;
}

.productMapDetail {
    font-size: 32rpx;
    margin-top: 10rpx;
    color: #000;
}

.numberContent {
    overflow: hidden;
    margin-top: 40rpx;
}
.form-btn{
    padding: 0;
    text-align: left;
    border-radius: 0;
    overflow: auto;
    font-size: 32rpx;
    background-color: transparent;
    color: transparent;
    height: auto;
    line-height: initial;
	margin-right: 40rpx
}
.form-btn::after{
    border: none;
}
.form-btn:hover{
    background-color: transparent;
}
.productMapPrice {
    margin-top: 20rpx;
    font-size: 32rpx;
    display: flex;
}

.productMapPrice .price {
    flex: 1;
    font-weight: 600;
    color: #f33;
}

.productMapPrice .count {
    flex: 1;
    padding-right: 10rpx;
    color: #999;
    display: flex;
    justify-content: flex-end;
}

.freightNumber {
    float: left;
    font-size: 26rpx;
    color: #999;
}

.number {
    float: right;
    font-size: 30rpx;
    color: #999;
}

.tab-item {
    margin: 0 22rpx;
	height: 78rpx;
	box-sizing: border-box;
    display: inline-block;
	border-bottom: 2rpx solid transparent
}

.tab-item.active {
    border-bottom-color:orangered
}

.item-ans {
    width: 100%;
    display: flex;
    flex-grow: row no-wrap;
    justify-content: space-between;
    padding: 30rpx;
    margin: 30rpx;
    box-sizing: border-box;
    height: 255rpx;
    align-items: center;
    border-bottom: 1px solid #fff;
}

.avatar {
    width: 255rpx;
    height: 255rpx;
    position: relative;
    padding-right: 30rpx;
    padding-top: 20rpx;
}

.avatar .img {
    width: 100%;
    height: 100%;
}

.avatar .doyen {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: -2px;
    right: 20rpx;
}

.expertInfo {
    font-size: 12px;
    flex-grow: 2;
    color: #b0b0b0;
    line-height: 1.5em;
}

.expertInfo .name {
    font-size: 16px;
    color: #000;
    margin-bottom: 0px;
}

.askBtn {
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 14px;
    border-radius: 60rpx;
    border: 1px solid #4675f9;
    color: #4675f9;
}

.tab-content {
    margin-top: 80rpx;
}

.scoll-h {
    height: 100%;
}

.action_btn {
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.action_btn view {
    margin-right: 40rpx;
}

.action_btn view:last-child {
    margin-right: 30rpx;
}

.action_btn .btn {
    width: 130rpx;
    height: 50rpx;
    border-radius: 27rpx;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.action_btn .cancel_btn {
    color: #999;
    border: 1rpx solid #999;
}

.action_btn .pay_btn {
    color: #fff;
    border: 1px solid #f33;
    background: linear-gradient(to right, orangered, #f33);
}

.total {
    width: 100%;
    height: 86rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    border-bottom: 1px solid #e6e6e6;
}

.total .total_price {
    color: #333;
    font-size: 30rpx;
    margin-right: 30rpx;
}

.total .total_count {
    font-size: 28rpx;
    color: #999;
    margin-right: 85rpx;
}

.load-more, .no-more-data {
    font-size: 28rpx;
    height: 78rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1px solid #e6e6e6;
}
