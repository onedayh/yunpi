.zan-tab {
    height: 45px;
}

.zan-tab__bd {
    width: 100%;
    display: -webkit-box;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff;
}

.zan-tab__bd--fixed {
    position: fixed;
    top: 0;
    z-index: 2;
}

.zan-tab__item {
    -webkit-box-flex: 1;
    flex: 1;
    display: inline-block;
    padding: 0 10rpx;
    line-height: 0;
    box-sizing: border-box;
    overflow: hidden;
    text-align: center;
}

.zan-tab__title {
    display: inline-block;
    max-width: 100%;
    height: 84rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    box-sizing: border-box;
    word-break: keep-all;
    font-size: 28rpx;
    color: #999;
}

.zan-tab__item--selected .zan-tab__title {
    color: #333;
    border-bottom: 2px solid #333;
}

.zan-tab__bd--scroll {
    display: block;
    white-space: nowrap;
}

.zan-tab__bd--scroll .zan-tab__item {
    min-width: 150rpx;
}
