page{
    box-sizing: border-box;
    padding: 20rpx;
}
view{
    box-sizing: border-box;
}
.invite{
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 42rpx 0 20rpx;
    background: #fff url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAYCAYAAADKx8xXAAAAiUlEQVQ4T63UwQ3AIAgFUBiuR2eqzsSp6XA2QmI0rQJWL158QsxHBAAgus+yh3CkslsWCspRDmO0YiS6IgByRQ9GadWPGa7gCr24gx78glb8CS14CDU8hTOswhE2wjaW5aqcVDhK1f7H0fK7LwBapTp87bRbEY/8r7HyVKqtriBudfmzkiz6v8cHhTZ3WEgCtg4AAAAASUVORK5CYII=') no-repeat 676rpx center/14rpx 24rpx;
    margin-bottom: 30rpx;
    border-radius: 16rpx;
}
.invite-img{
    width: 56rpx;
    height: 56rpx;
    vertical-align: top;
    margin-right: 10rpx;
}
.rec{
    color: #333;
    font-size: 28rpx;
}
.tips{
    color: #999;
    font-size: 24rpx;
    margin-left: auto;
}
.item{
    margin-bottom: 20rpx;
    border-radius: 16rpx;
    background-color: #fff;
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    justify-content: space-around;
    height: 200rpx;
    overflow: hidden;
}
.item::before, .item::after{
    content: '';
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #f5f5f5;
    position: absolute;
    top: 90rpx;
}
.item::before{
    left: -10rpx;
}
.item::after{
    right: -10rpx;
}
.jian{
    font-size: 24rpx;
    color: #fff;
    background-color: orangered;
    height: 30rpx;
    width: 120rpx;
    position: absolute;
    top: 15rpx;
    left: -30rpx;
    text-align: center;
    line-height: 30rpx;
    transform: rotate(-45deg);
}
.money{
    display: flex;
    color: orangered;
    align-items: center;
}
.fu{
    font-size: 36rpx;
    align-self: flex-end;
    padding-bottom: 10rpx;
}
.num{
    font-size: 80rpx;
}
.ts{
    color: orangered;
    font-size: 24rpx;
}
.name{
    color: #333;
    font-size: 32rpx;
}
.time{
    color: #999;
    font-size: 24rpx;
    padding-top: 10rpx;
}
.btn{
    width: 156rpx;
    height: 60rpx;
    background-color: orangered;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 28rpx;
    margin: 0;
    padding: 0;
}
.one-box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.done, .timeout{
    opacity: .5;
}
.timeout .jian, .timeout  .btn{
    background-color: #999;
}
.timeout .money, .timeout .ts, .timeout .name{
    color: #999;
}