view, scroll-view{
    box-sizing: border-box;
}
.top{
    background-color: #fff;
    height: 200rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
}
.head{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.aa{
    padding: 20rpx 20rpx 0;
    background-color: #fff;
}
.bb{
    background-color: #f5f5f5;
}
.info-wrap{
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 120rpx;
    width: 580rpx;
}
.name{
    font-size: 32rpx;
    line-height: 50rpx;
    color: #333;
}
.time{
    font-size: 24rpx;
    color: #999;
    line-height: 50rpx;
    display: flex;
}
.time text{
    padding-right: 20rpx;
}

.tab{
    font-size: 28rpx;
    color: #999;
}
.tab-item{
    width: 33.33%;
}
.wrap{
    margin-top: 20rpx;
}
.c-wrap{
    background-color: #fff;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.c-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 50%;
    height: 140rpx;
    font-size: 28rpx;
    border-top: 2rpx solid #e6e6e6;
    padding-left: 20rpx;
}
.c-item:nth-child(-n+2){
    border-top: none;
}
.c-item:nth-child(2n){
    border-left: 2rpx solid #e6e6e6;
}
.c-value{
    color: #999;
    padding-top: 10rpx;
}


.clue-item{
    display: flex;
    justify-content: space-between;
    min-height: 150rpx;
    padding-bottom: 20rpx;
    position: relative;
}
.clue-item:last-child{
    padding-bottom: 0;
}
.clue-time{
    width: 90rpx;
    color: #999;
    text-align: right;
}
.clue-item:before, .clue-item:after{
    content: '';
    background-color: #ccc;
    position: absolute;
}
.clue-item:before{
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    left: 106rpx;
    top: 10rpx;
    z-index: 10;
}
.clue-item:after{
    width: 2rpx;
    height: 100%;
    left: 116rpx;
    top: 10rpx;
}
.clue-item:last-child:after{
    width: 0;
    height: 0;
}
.t-date{
    font-size: 28rpx;
    line-height: 40rpx;
}
.t-hour{
    font-size: 24rpx;
    line-height: 36rpx;
}
.clue-content{
    color: #333;
    font-size: 28rpx;
    line-height: 40rpx;
    width: 560rpx;
}