.zan-badge {
    position: relative;
}

.zan-badge__text {
    position: absolute;
    top: -10rpx;
    right: 30rpx;
    height: 1.6em;
    min-width: 1.6em;
    line-height: 1.6;
    padding: 0 0.4em;
    font-size: 20rpx;
    border-radius: 0.8em;
    background: #f44;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    -webkit-transform: translateX(50%) scale(0.5);
    transform: translateX(50%) scale(0.5);
    -webkit-transform-origin: center;
    transform-origin: center;
    z-index: 10;
    box-shadow: 0 0 0 2px #fff;
    box-sizing: border-box;
}
